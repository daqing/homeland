<%= form_for [:admin, @nav_link] do |f| %>
  <%= render 'shared/error_messages', target: @nav_link %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :section %>
    <%= f.text_field :section, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :position %>
    <%= f.text_field :position, class: "form-control" %>
  </div>
  <div class="form-actions">
    <%= f.submit t("common.save"), class: "btn btn-primary", 'data-disable-with' => t("common.saving") %>
    <%= link_to t("common.cancel"), admin_nodes_path, class: "btn btn-secondary" %>
  </div>
<% end %>
