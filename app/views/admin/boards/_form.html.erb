<%= form_for [:admin, @board] do |f| %>
  <%= render 'shared/error_messages', target: @board %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :intro %>
    <%= f.text_area :intro, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :position %>
    <%= f.text_field :position, class: "form-control" %>
  </div>
  <div class="form-actions">
    <%= f.submit t("common.save"), class: "btn btn-primary", 'data-disable-with' => t("common.saving") %>
    <%= link_to t("common.cancel"), admin_boards_path, class: "btn btn-secondary" %>
  </div>
<% end %>
